alias strip_empty="grep . --color=never"
alias strip_comments="grep -ve '^\s*#' --color=never"
alias strip_matches='cut -d: -f1 | sort -u'
alias sudo='csudo'
alias sudoedit='sudo -e'
alias sum='jq -s add'
alias swap='builtin pushd +1'
alias tail='tail -f'
alias tar='ctar'
