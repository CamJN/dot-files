    function project {
        if [ "$1" = 'size' ]; then
            find . -type f \( -iname '*.h' -o -name '*.m' -o -name '*.pch' \) -print0 | xargs -0 wc -l | sort -nr
        elif [ "$1" = 'build' ]; then
            xcodebuild
        elif [ "$1" = 'info' ]; then
            xcodebuild -list
        fi
    }
    MAC_DEV=1
    if [ -n "${MAC_DEV:+x}" ]; then
        DEV_PLATFORM=MacOSX
        DEV_VERSION=`version -productVersion | \sed -Ee 's/([0-9]+\.[0-9]+)\.?[0-9]*/\1/g'`
    else
        DEV_PLATFORM=iPhoneOS
        DEV_VERSION=6.1
    fi

